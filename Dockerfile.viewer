FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir requests

# Copy application files
COPY view_captures.py .
RUN mkdir -p captures

# Set environment variables
ENV DOCKER=true
ENV PORT=8080
ENV ESP32_IP=10.0.0.30

# Expose port
EXPOSE 8080

# Run the server
CMD ["python", "-u", "view_captures.py"]
